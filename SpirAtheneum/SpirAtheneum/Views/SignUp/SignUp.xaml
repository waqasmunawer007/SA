<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
     xmlns="http://xamarin.com/schemas/2014/forms"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="SpirAtheneum.Views.SignUp"
     xmlns:local="clr-namespace:SpirAtheneum.Renderers" >
    <ContentPage.Content>
        <StackLayout 
             VerticalOptions="FillAndExpand" 
             HorizontalOptions="FillAndExpand"
             x:Name = "main_container"
             BackgroundColor="{StaticResource BackgroundColor}"         
             Orientation="Vertical">
            <!--Sign title -->
              <Label 
                    Margin="0,15,0,0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" 
                    Text="Create Account" 
                    FontSize="{StaticResource HeadingFontSize}" 
                    TextColor="{StaticResource NormalTextColor}"/>
             
            <!-- Sign Up Forms -->
            <StackLayout 
                 Margin="16,15,16,0"
                 VerticalOptions="CenterAndExpand" 
                 HorizontalOptions="FillAndExpand">

                <Label VerticalOptions="Center"
                   HorizontalOptions="Start" 
                   Text="Email:" 
                   FontSize="{StaticResource NormalFontSize}" 
                   TextColor="{StaticResource NormalTextColor}"
                   Margin="0,45,0,0"/>

                <local:LoginEntry 
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    Text="{Binding  DBUser.Email}"
                    BackgroundColor="{StaticResource BackgroundColor}" 
                    TextColor="{StaticResource NormalTextColor}"/>
                   
                <Label 
                   Margin="0,5,0,0"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Text="Password:" 
                   FontSize="{StaticResource NormalFontSize}" 
                   TextColor="{StaticResource NormalTextColor}" />

                <local:LoginEntry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    Text="{Binding  DBUser.Password}"
                    IsPassword="True"
                    BackgroundColor="{StaticResource BackgroundColor}" 
                    TextColor="{StaticResource NormalTextColor}" />
               <local:GeneralButton 
                    Margin="0,25,0,20"
                    HeightRequest="40"  
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="Center" 
                    Text="SignUp" 
                     Style="{StaticResource ButtonStyle}"
                    Command="{Binding AddButtonCommand}"
                    CommandParameter="{Binding Source={x:Reference main_container}, Path=BindingContext}"/>
            </StackLayout>
             <!-- Ads label--> 
            <Label 
               VerticalOptions="EndAndExpand"
               HorizontalOptions="FillAndExpand"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Text="Advertisement"
               BackgroundColor="White" 
               TextColor="Black"
               FontSize="Large" 
               HeightRequest="50"
               Margin="0,10,0,8"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
